.toast-box {

    width: 100%;

    height: 100%;

    opacity: 1;

    position: fixed;

    top: 0px;

    left: 0px;

}
.toastbg {

    opacity: 0.2;

    background-color: black;

    position: absolute;

    width: 100%;

    min-height: 100vh;

}
.showToast {

    position: absolute;

    opacity: 1;

    width: 70%;

    margin-left: 15%;

    margin-top: 40%;

}
