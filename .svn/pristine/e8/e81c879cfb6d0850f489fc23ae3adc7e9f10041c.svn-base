        public string GetItemsBonus(string CompanyId, string OpenId)
        {
            try
            {
                List<BonusItemInfo> listmes = dal.GetItemsBonus(CompanyId, OpenId);
                if (listmes != null)
                {
                    return ResponseHandle<object>.GetResult(strSucess, "", listmes);
