// pages/backrecord/backrecord.js
Page({

  /**
   * 页面的初始数据
   */
  data: {
    begindate: "",
    enddate: "",
    depDetail: []
  },
  changeBegindate(e) {
    var begindate = this.data.begindate;
    this.setData({ begindate: e.detail.value });
  },
  changeEnddate(e) {
    var enddate = this.data.enddate;
    this.setData({ enddate: e.detail.value });
  },
  SouSuo: function () {
    var that = this;
    var begindate = this.data.begindate;
    var enddate = this.data.enddate;
    var depDetail = this.data.depDetail;
    if (begindate > enddate) {
      wx.showModal({
        title: '提示',
        content: '开始日期不能大于结束日期',
        showCancel: false,
        confirmColor: '#007aff'
      })
    }
    else {
      wx.request({
        url: 'http://192.168.15.110:1592/api/Bos/Wo/GetSuggest',
        method: "GET",
        data: {
          StartTime: begindate,
          EndTime: enddate,
        },
        header: {
          'content-type': 'application/x-www-form-urlencoded' // 默认值
        },
        success: function (resone) {
          // console.log(resone.data)
          if (resone.data.code == 100) {
            that.setData({
              depDetail: resone.data.data
            })
          }
        },
        fail: function () {
          console.log("no");
        }
      })
    }

  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    var depDetail = this.data.depDetail;
    wx.request({
      url: 'http://192.168.15.110:1592/api/Bos/Wo/GetSuggest',
      method: "GET",
      header: {
        'content-type': 'application/x-www-form-urlencoded' // 默认值
      },
      success: function (resone) {
        //  console.log(resone.data)
        if (resone.data.code == 100) {
          that.setData({
            depDetail: resone.data.data
          })
        }
      },
      fail: function () {
        console.log("no");
      }
    })
  },
  SuggestClick: function (e) {
    // console.log(e.currentTarget.id);
    wx.navigateTo({
      url: '../backredeta/backredeta?ResonId=' + e.currentTarget.id,
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})