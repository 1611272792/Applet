            comModel.CompanyEmail = HttpContext.Current.Request["CompanyEmail"];
            comModel.CompanyPhone = HttpContext.Current.Request["CompanyPhone"];
            comModel.CompanyID = HttpContext.Current.Request["CompanyID"];
            //获取图片
