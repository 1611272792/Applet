                    sqlStr += string.Format($"   AND CompanyId='{CompanyId}'");
                }
                if (RemarkType==0)
                {
                    sqlStr += string.Format("  AND BrType=0");
                }
             else  if (RemarkType == 1)
                {
                    sqlStr += string.Format("  AND BrType=1");
                }
                
                DataTable dt = DbHelperSQL.ExecuteDataTable(sqlStr);
                return dt;
            }
            catch (Exception)
            {
                throw;
            }
          
        }

