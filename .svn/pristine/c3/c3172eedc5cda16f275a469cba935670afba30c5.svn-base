/**app.wxss**/
@import "./src/css/icon.wxss";
@import './src/css/weui.wxss';

.iconfont {
  font-family:"iconfont" !important;
  font-size:60rpx;
}
/*本项目使用的18个图标  */
/*清除浮动  */
.tui-clear:after{
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden;
}
.tui-show{display: block;}
.tui-hide{display: none;}

/*tabbar style  */
.tui-tabbar-content{
  padding: 10px;
}
.tui-tabbar-group{
  border: 1px solid #1296db;
  border-radius: 3px;
  overflow: hidden;
  width: 100%;
  display: table;
  table-layout: fixed;
  color: #1296db;
}
.tui-tabbar-cell{
  display: table-cell;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
}
.tui-tabbar-cell:not(:last-child){border-right: 1px solid #1296db;}
.tui-tabbar-cell.tui-active{background-color: #1296db;color: #ffffff;}

/* 上边框 */
.tui-list-box{border-top:1px solid #c8c7cc;}



